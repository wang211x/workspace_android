<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homelist_bg_solid" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/grid_reco_tvprdDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:text="诚邀预约 9月15日10:08开售"
            android:textColor="#555555"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/grid_reco_tvprdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/grid_reco_tvprdDescription"
            android:gravity="left"
            android:text="荣耀7i"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/grid_reco_tvprdUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/grid_reco_tvprdName"
            android:gravity="left"
            android:text="￥1899.00"
            android:textColor="#000000"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/grid_reco_ivprdPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/grid_reco_tvprdName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/grid_reco_ivprdStatus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/status_hot_sale" />

</RelativeLayout>